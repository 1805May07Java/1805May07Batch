		Scanner scan = new Scanner(System.in);
		int op1 = 0;
		op1 = Integer.parseInt(scan.nextLine());	
		switch(op1) {
		case 1: logIn(); break;
		case 2: signUp(); break;
		case 3: deposit(); break;
		default: 
		System.out.println("Sorry, that is not an option. Please try again!");
		start();
		}
		scan.close();
		return;
		
	}
	
	
