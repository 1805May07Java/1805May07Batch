<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>helloservlets</display-name>

	<servlet>
		<servlet-name>hello</servlet-name>
		<servlet-class>com.ex.servlets.LoginServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>hello</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>R</servlet-name>
		<servlet-class>com.ex.servlets.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>R</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ViewLoader</servlet-name>
		<servlet-class>com.ex.servlets.LoadViewServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewLoader</servlet-name>
		<url-pattern>*.view</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Rei</servlet-name>
		<servlet-class>com.ex.servlets.ReimbursementServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Rei</servlet-name>
		<url-pattern>/Rei</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>com.ex.servlets.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>GetUserRequests</servlet-name>
		<servlet-class>com.ex.servlets.GetUserRequests</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetUserRequests</servlet-name>
		<url-pattern>/getuserreqs</url-pattern>
	</servlet-mapping>

</web-app>